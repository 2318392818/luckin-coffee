/* pages/dingdan/dingdan.wxss */
.mainbg {
  /* background-color: #999; */
  height: 100vh;
  position: relative;
  background: #f5f5f5;
}

.bg {
  width: 100%;
  height: 15%;
  position: relative;
  background: #0c34ba;
}


/* 信息栏背景 */
.info {
  width: 90%;
  padding: 20rpx;
  margin: 20rpx;
  position: absolute;
  top: 110rpx;
  z-index: 999;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background: white;
  box-shadow: 0 10rpx 10px rgba(0, 0, 0, .2);
  padding-bottom: 10vh;
}

.van-tabs__line {
  background-color: #0c34ba !important;
}

/* 订单顶部信息 */
.top {

  
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.top .on {
  margin: 20rpx 0;
  font-weight: 700;
  font-size: 38rpx;
  color: #444;
}

.top .bottem {
  display: flex;
  justify-content: space-between;

}

.top .bottem .right {
  display: flex;
  justify-content: space-between;
}

.top .bottem .left {
  color: #666;
  font-size: 27rpx;
}

.top .bottem .right .clean {
  width: 25px;
  height: 25px;
  margin-left: 10rpx;
  position: relative;
  top: -10%;
}
.top .bottem .right .queren{
  width: 20px;
  height: 20px;
  margin-left: 10rpx;
  position: relative;
  top: 5%;
}
.top .bottem .right .clean image {
  width: 100%;
  height: 100%;
}

.god {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.god .left .image {
  height: 15vh;
  width: 15vh;
}

.god .left .image image {
  width: 100%;
  height: 100%;
}

.god .right {
  width: 70%;
  margin-left: auto;
}

.chen1 {
  display: flex;
  justify-content: flex-start;
  font-size: 27rpx;
  color: #666;
}

.cname {
  width: 35%;
}

.rule {
  white-space: nowrap;
  /* 禁止换行 */
  overflow: hidden;
  /* 隐藏溢出内容 */
  text-overflow: ellipsis;
  /* 文本溢出时显示省略号 */
  width: 30%;
  margin-right: auto;
}

.enname{
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
  margin-bottom: 40rpx;
}
.cheng3{
  display: flex;
  justify-content: space-between;
  position: relative;
  top: 20%;
}
.price,.totalPrice{
  color: #e4393c;
  font-weight: 700;
  font-size: 30rpx;
}

.count{
  margin-right: 4%;
}

.choudibian{
  display: flex;
  justify-content: space-around;
  font-size: 27rpx;
  color: #666;
  margin-top: 1vh;
 padding-bottom: 20rpx;
 border-bottom: 2px dashed #000;
}
.totalQuantity{
  margin-right: auto;
}

