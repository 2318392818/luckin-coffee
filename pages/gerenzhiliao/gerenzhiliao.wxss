/* pages/gerenzhiliao/gerenzhiliao.wxss */
.mainbg{
  /* background-color: #999; */
  height: 100vh;
  position: relative;
  background: #f5f5f5;
}

.bg{
  width: 100%;
  height: 15%;
  position: relative;
  background: #0c34ba;
}


/* 信息栏背景 */
.userinfo{
  width: 90%;
  padding: 20rpx;
  margin: 20rpx;
  position: absolute;
  top: 110rpx;
  z-index:999;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background: white;
  box-shadow: 0 10rpx 10px rgba(0,0,0,.2);
 }
/* 用户基础信息栏 */
.usetouxlan{
  display: flex;
  /* background:blue; */
}
/* 头像 */
.usertoux{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid #b2b2b2;
  position: relative;
  top: -5px;
}

.usertoux image{
  width: 100%;
  height: 100%;
}
/* 名称和简介 */
.userright{
  width: 80%;
  margin-left: 40rpx;
  /* background: #000; */
}

.username{
  color: #0c34ba;
  font-weight: bold;
  margin-bottom: 20rpx;
  /* background: red; */
}

.userdesc {
  width: 100%;
  white-space: nowrap;  /* 强制文本不换行 */
  overflow: hidden;     /* 隐藏溢出内容 */
  text-overflow: ellipsis; /* 溢出时显示省略号 */
  /* background: #66ccff; */
}
/* 底部详细信息栏 */
.daohang{
  margin-top: 10rpx;
}
.daohang .item{
  padding: 0rpx 40rpx;
  display: flex;
  justify-content: space-between;/* 子元素两边分布 */
  height: 80rpx;
  color: #323233;
  font-size: 30rpx;
  border-bottom: 1px solid #f0f0f0;
  align-items: center;
  margin-bottom: 10rpx;
}
.daohang .item text:nth-child(2){
  color: #969799;
}
.daohang .item:last-child{
  border: none;
  padding: 5px;
}
.van-field__label{
  color: #323233 !important;
}
.items{
  padding-left:10rpx ;
}