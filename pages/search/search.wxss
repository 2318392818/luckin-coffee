/* pages/search/search.wxss */
.mainbg {
  width: 100%;
  background-color: #aaa4a4;
}

/* 顶部样式 */
.top {
  background-color: #fff;
  height: 40px;
  display: flex;
  /* 子元素垂直居中 */
  align-items: center;
  /* 使子元素两侧贴边 */
  justify-content: space-between;
}


.left {
  width: 75%;
  font-style: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-left: 5%;
}

.left .searchinp {
  background-color: #f7f9fa;
  padding: 10rpx 80rpx;
  border-radius: 40px;
  text-align: left;
  color: black;
  width: 100%;
}

.img {
  position: absolute;
  left: 10px;
  width: 20px;
  height: 20px;
}

.right{
  width: 20%;
  text-align: center;
  font-size: 24px;
  color: #444444;
}

/* 热卖商品样式 */
.reqlist {
  width: 98%;
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
}

.reqlist:nth-child(odd){
  margin-left: 0px;
}

.shangping {
  width: calc((100% - 40rpx) / 2);
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 10px;
}

.image {
  width: 100%;
  height: 320rpx;
  position: relative;
  margin-bottom: 10px;
}

.image image {
  width: 100%;
  height: 100%;
}

.hot {
  width: 30%;
  position: relative;
  top: 0;
  right: 0;
  color: #fff;
  background-color: #e4393d;
  font-style: 10px;
  border-radius: 30rpx;
  text-align: center;
}

.shangping .cname {
  font-style: 14px;
  margin-top: 20rpx;
  color: #454545;
}

.shangping .enname {
  font-style: 12px;
  color: #999;
}

.shangping .price {
  font-style: 14px;
  color: #e4383d;
  font-weight: bold;
}
/* 无商品界面 */

.Wu{
  display: flex;
  flex-direction: column;
  font-size: 60px;
  width: 100%;
  justify-content: center;
  align-items: center;
  text-align: center;
  background: #ffffff;
}
.Wu .wushangping{
  width: 100%;
  margin-top: 100px;
}
.Wu .guanjianci{
  width: 100%;
  margin-top: 20px;
}

