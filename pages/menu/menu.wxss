/* pages/menu/menu.wxss */

/* —————— 搜索栏区域 —————— */
.search {
  background-color: #ffffff;
  padding: 10rpx 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
  /* 底部阴影增强层次感 */
}

/* 菜单栏 */
.van-sidebar-item--selected {
  border-left: 8rpx solid  #0c34ba !important;
}

.select-content{
  position: relative;
  top:-300px;
  right: -70px;
}
.reqlist {
  width: calc(100% - 80px);
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
}

.shangping {
  width: calc((100% - 40rpx) / 2);
  margin-left: 20rpx;
  margin-bottom: 15rpx;
}

.image {
  width: 100%;
  height: 320rpx;
  position: relative;
  /* margin-bottom: 10px; */
}

.image image {
  width: 100%;
  height: 100%;
}

.hot {
  width: 30%;
  position: relative;
  top: -102%;
  right: -70%;
  color: #fff;
  background-color: #e4393d;
  font-style: 10px;
  border-bottom-left-radius: 20rpx;
  text-align: center;
}

.shangping .cname {
  font-style: 14px;
  margin-top: 10rpx;
  color: #454545;
}

.shangping .enname {
  font-style: 12px;
  color: #999;
  width: 100%;
}

.shangping .price {
  font-style: 14px;
  color: #e4383d;
  font-weight: bold;
}