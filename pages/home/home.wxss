/* pages/home/home.wxss */
.mainbg {
  width: 100%;
  background-color: #f5f5f5;
}

/* 顶部样式 */
.top {
  background-color: #fff;
  height: 40px;
  display: flex;
  /* 子元素垂直居中 */
  align-items: center;
  /* 使子元素两侧贴边 */
  justify-content: space-between;
}

.left {
  width: 35%;
  height: 40px;
  font-size: 12px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.left text:nth-of-type(2) {
  font-weight: bold;
  color: #0c32b9;
}

.right {
  width: 65%;
  font-style: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.right .searchinp {
  background-color: #f7f9fa;
  padding: 10rpx 80rpx;
  border-radius: 40px;
  text-align: left;
  color: #c9cacc;
  width: 100%;
}

.img {
 position: absolute;
  left: 10px;
  width: 20px;
  height: 20px;
}

/* 轮播图样式 */
.banner {
  width: 100%;
  height: 490rpx;
  margin-bottom: 20rpx;
}

.bannerSwiper {
  width: 100%;
  height: 100%;
}

.bannerImg {
  width: 100%;
  height: 100%;
}

/* 热卖商品样式 */
.reqlist {
  width: 98%;
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
}

.shangping {
  width: calc((100% - 40rpx) / 2);
  margin-left: 20rpx;
}

.image {
  width: 100%;
  height: 320rpx;
  position: relative;
  margin-bottom: 10px;
}

.image image {
  width: 100%;
  height: 100%;
}

.hot {
  width: 30%;
  position: relative;
  top: 0;
  right: 0;
  color: #fff;
  background-color: #e4393d;
  font-style: 10px;
  border-radius: 30rpx;
  text-align: center;
}

.shangping .cname {
  font-style: 14px;
  margin-top: 20rpx;
  color: #454545;
}

.shangping .enname {
  font-style: 12px;
  color: #999;
  width: 100%;
}

.shangping .price {
  font-style: 14px;
  color: #e4383d;
  font-weight: bold;
}